{
  "name": "telegram-quarantine-bot",
  "version": "3.0.0",
  "description": "An advanced Telegram quarantine bot with Supabase integration for automatic user management across multiple groups",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --testTimeout=30000",
    "lint": "eslint .",
    "deploy": "npm run lint && npm test && npm start",
    "debug": "NODE_ENV=development nodemon index.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "quarantine",
    "supabase",
    "moderation",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.12.2",
    "@supabase/supabase-js": "^2.33.1",
    "express": "^4.18.2",
    "winston": "^3.10.0",
    "node-cron": "^3.0.2",
    "node-cache": "^5.1.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "@types/jest": "^29.5.8",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/telegram-quarantine-bot.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/telegram-quarantine-bot/issues"
  },
  "homepage": "https://github.com/your-username/telegram-quarantine-bot#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/logs/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "tabWidth": 2
  }
  }
